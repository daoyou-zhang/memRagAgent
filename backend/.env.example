# ============================================================
# memRagAgent 环境配置示例
# 复制此文件为 .env 并填入真实配置
# ============================================================

# ------------------------------------------------------------
# 数据库配置
# ------------------------------------------------------------
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=your-db-name
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# ------------------------------------------------------------
# LLM 配置（主模型 - 回复生成）
# ------------------------------------------------------------
MODEL_NAME=deepseek-v3.2-exp
MODEL_PROVIDER=qwen
API_MODEL_KEYS=sk-your-api-key-1,sk-your-api-key-2
API_MODEL_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
MODEL_MAX_TOKENS=6000
MODEL_TEMPERATURE=0.5

# ------------------------------------------------------------
# LLM 配置（意图模型 - 可选）
# ------------------------------------------------------------
INTENT_MODEL_NAME=qwen-flash
INTENT_API_KEYS=sk-your-intent-api-key
INTENT_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
INTENT_MAX_TOKENS=2000
INTENT_TEMPERATURE=0.1

# ------------------------------------------------------------
# 服务地址配置
# ------------------------------------------------------------
MEMORY_SERVICE_BASE_URL=http://127.0.0.1:5000
KNOWLEDGE_SERVICE_BASE_URL=http://127.0.0.1:5001

# ------------------------------------------------------------
# Redis 配置
# ------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ------------------------------------------------------------
# Neo4j 配置
# ------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# ------------------------------------------------------------
# 数字人配置（可选）
# ------------------------------------------------------------
DASHSCOPE_API_KEY=sk-your-dashscope-key
DASHSCOPE_API_BASE=https://dashscope.aliyuncs.com/api/v1
DASHSCOPE_API_MODEL=qwen3-asr-flash
